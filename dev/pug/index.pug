										option(value="11 месяцев") 11 месяцев
										option(value="10 месяцев") 10 месяцев

								#range_v2.range
								.flex-center-between.amounts_v2
									.amount
										p.fs-10 3
									.amount
										p.fs-10 6
									.amount
										p.fs-10 9
									.amount
										p.fs-10 12
									.amount
										p.fs-10 18
							.income-info.flex-wrap
