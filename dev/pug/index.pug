									p.fs-18.fw-bold.c-yellow 1.2542 BTC
								.income.text-center 
									p.fs-16 Общая прибыль
									p.fs-18.fw-bold.c-yellow 2.2044 BTC
							button.btn.bg-red.w-100(type="submit")
								|Инвестируй сейчас
								+icon("arrow-right")
					.advantages
						.px-15-sm
							h3.fs-25.fw-bold Преимущества 
								span.c-red AlfaTrade
							hr
						ul.advantages-list 
							li.advantages-item
								a.d-flex(href="#") 
									span.fs-30.fw-bold.c-red 01.
									span.fs-18 Количественный и качественный анализ рыночных данных!
										+icon("arrow-right")
							li.advantages-item
								a.d-flex(href="#") 
									span.fs-30.fw-bold.c-red 02.
									span.fs-18 Более 10 лет опыта управления активами!
										+icon("arrow-right")
							li.advantages-item
								a.d-flex(href="#") 
									span.fs-30.fw-bold.c-red 03.
									span.fs-18 Фирменная технология и программные решения!
										+icon("arrow-right")
							li.advantages-item
								a.d-flex(href="#") 
									span.fs-30.fw-bold.c-red 04.
									span.fs-18 Лучшее соотношение риска и прибыли!
										+icon("arrow-right")
							li.advantages-item
								a.d-flex(href="#") 
									span.fs-30.fw-bold.c-red 05.
									span.fs-18 Агентская программа для парнтеров фонда!
										+icon("arrow-right")
							li.advantages-item
								a.d-flex(href="#") 
									span.fs-30.fw-bold.c-red 06.
									span.fs-18 Максимальная прозрачность операций!
										+icon("arrow-right")
